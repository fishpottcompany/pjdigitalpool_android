<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startactivity_guideline_horizontal_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startactivity_guideline_horizontal_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startactivity_guideline_horizontal_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startactivity_guideline_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startactivity_guideline_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />
    
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/pjphoto"
        android:contentDescription="@string/empty_string"
        app:layout_constraintBottom_toTopOf="@+id/startactivity_guideline_horizontal_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startactivity_guideline_horizontal_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/startactivity_textview_bibleverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="That He might presend to Himself a Glorious Church, not having spot, or wrinkle, or any such thing; But that is should be host and without blemish \n - Ephesians 5: 27"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startactivity_guideline_horizontal_3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dashboard_fragment_button_redeem"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Next"
        android:background="@drawable/yellow_button_white_text"
        android:textColor="@drawable/yello_button_pressed_reaction"
        android:textSize="15sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/startactivity_textview_bibleverse"
        app:layout_constraintStart_toEndOf="@+id/startactivity_guideline_vertical_1"
        app:layout_constraintEnd_toStartOf="@+id/startactivity_guideline_vertical_2"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>